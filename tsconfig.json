{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["es6"],                                        
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true, 
    "module": "commonjs",                                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                                  
    "resolveJsonModule": true,
    "allowJs": true,
    "outFile": "./dist",                                  
    "outDir": "./src",                                   
    "removeComments": true,
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./src/config/*"]
    }
  }
}